<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="BaseAppTheme.AppTheme">
        <item name="android:textColorPrimary">@color/fir_text_color</item>
    </style>

    <style name="BaseAppTheme.SplashTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="BaseDialogTheme" parent="AlertDialog.AppCompat.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/fir_text_color</item>
        <item name="android:textColorSecondary">@color/sec_text_color</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColorHint">#42ffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="bs_dialogBackground">@color/colorPrimary</item>
        <item name="bs_dividerColor">@color/divider_color</item>
        <item name="bs_numColumns">5</item>
        <item name="bs_listStyle">@style/BottomSheet.List</item>
    </style>
</resources>
