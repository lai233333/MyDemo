<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_item_bg"
    android:paddingTop="@dimen/padding_large"
    android:layout_marginLeft="@dimen/padding_normal"
    android:layout_marginRight="@dimen/padding_normal"
    android:layout_marginTop="@dimen/margin_normal"
    android:elevation="3dp">


    <ImageView
        android:id="@+id/iv_type_welfare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_width_normal"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:scaleType="centerCrop"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_type_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_marginRight="@dimen/margin_normal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gank_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/fir_text_color"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:id="@+id/iv_gank_pic"
            android:layout_width="@dimen/image_width_small"
            android:layout_height="@dimen/image_width_small"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_small"
            android:scaleType="centerCrop"
            android:visibility="visible"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_normal"
        android:paddingLeft="@dimen/padding_large"
        android:paddingRight="@dimen/padding_large"
        android:layout_marginBottom="@dimen/padding_small">

        <TextView
            android:id="@+id/tv_gank_who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sec_text_color"
            android:textSize="@dimen/text_smaller" />

        <TextView
            android:id="@+id/tv_gank_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_gank_who"
            android:textColor="@color/sec_text_color"
            android:textSize="@dimen/text_smaller"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_gank_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/sec_text_color"
            android:textSize="@dimen/text_smaller" />

    </RelativeLayout>

</LinearLayout>